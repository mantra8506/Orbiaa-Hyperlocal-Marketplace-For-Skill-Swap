<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/cream"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/dark_brown"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="10dp"
            android:src="@drawable/baseline_arrow_back_24"
            android:contentDescription="Back"
            app:tint="@color/white"
            android:clickable="true"
            android:focusable="true"/>

        <TextView
            android:id="@+id/chatHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="My Account"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="26sp" />
    </LinearLayout>

 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     android:orientation="vertical">
    <TextView
        android:id="@+id/receivedRequestsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requests Received: 0"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="25sp"
        android:background="@drawable/gradient_bg"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/sentRequestsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Requests Sent: 0"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:background="@drawable/gradient_bg"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        android:padding="10dp"/>

 </LinearLayout>

    <!-- Membership Button -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="Take \n Membership"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_margin="30dp"
        android:textSize="18sp"
        android:background="@drawable/membership_bg"
        android:textColor="@android:color/white"
        android:padding="12dp"
        android:layout_marginBottom="20dp"/>

    <!--  Premium  -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_workspace_premium_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium"
            android:textSize="16sp"
            android:paddingStart="12dp"/>

</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginBottom="8dp"/>

    <!--  About Us -->
    <LinearLayout
        android:id="@+id/Aboutpage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/baseline_people_alt_24"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About Us "
            android:textSize="16sp"
            android:paddingStart="12dp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_marginBottom="8dp"/>
</LinearLayout>